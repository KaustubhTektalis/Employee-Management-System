RUN THE FOLLOWING COMMANDS IN THE PostgreSQL editor in the given sequence.
The sequence is identified by the breaks between the commands.

1. ------------------------------------------------------------------------------------

CREATE TABLE employees (
    id VARCHAR(50) PRIMARY KEY,
    empname VARCHAR(200) NOT NULL,
    empmail VARCHAR(200),
    empaddress VARCHAR(200),
    empdepartment VARCHAR(200)
);

ALTER TABLE employees
ADD COLUMN active BOOLEAN NOT NULL DEFAULT TRUE;


2. -------------------------------------------------------------------------------------

CREATE SEQUENCE emp_id_seq START 1 INCREMENT 1;

ALTER TABLE employees ALTER COLUMN empid SET DEFAULT 'TT' || TO_CHAR(CURRENT_DATE, 'YY') || LPAD(nextval('emp_id_seq')::text, 3, '0');

ALTER SEQUENCE emp_id_seq RESTART WITH 1;

3. -------------------------------------------------------------------------------------


CREATE TABLE passwords (
    empid VARCHAR(50) REFERENCES employees(id) ON DELETE CASCADE,
    emppassword VARCHAR(200) NOT NULL,
    PRIMARY KEY (empid)
);

4. -------------------------------------------------------------------------------------

CREATE TABLE roles (
    empid VARCHAR(50) REFERENCES employees(id) ON DELETE CASCADE,
    role VARCHAR(200) NOT NULL
);

ALTER TABLE roles ADD COLUMN active BOOLEAN DEFAULT TRUE;


5. -------------------------------------------------------------------------------------


INSERT INTO employees (empname, empaddress, empdepartment)
VALUES ('Kaustubh','kaustubh@gmail.com', 'hyd', 'dev')
RETURNING id;

6. --------------------------------------------------------------------------------------

INSERT INTO passwords (empid, emppassword)
VALUES ('TT26001', '$2a$12$7TuWOu63LzIPMbRiBVx4DuuYqrGQDLJU4k7llo1IguEM37Yb5AzXe');


7. --------------------------------------------------------------------------------------

INSERT INTO roles (empid, role)
VALUES ('TT26001', 'Admin');


